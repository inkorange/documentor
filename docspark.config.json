{
  "name": "DocSpark Web Component Example",
  "description": "Reference component library for DocSpark testing",
  "version": "0.1.0",

  "source": {
    "include": [
      "src/components/**/*.{tsx,jsx}"
    ],
    "exclude": [
      "**/*.test.{tsx,jsx}",
      "**/*.stories.{tsx,jsx}"
    ],
    "styleFiles": [".css", ".scss", ".module.css", ".module.scss"]
  },

  "output": {
    "directory": "./docs",
    "baseUrl": "/"
  },

  "server": {
    "port": 6006,
    "open": false
  },

  "coverage": {
    "enabled": true,
    "thresholds": {
      "statements": 80,
      "branches": 80,
      "functions": 80,
      "lines": 80
    }
  },

  "variants": {
    "autoGenerate": true,
    "maxPermutations": 20,
    "defaultValues": {
      "string": "Example text",
      "number": 42,
      "children": "Button Text"
    }
  },

  "theme": {
    "tokens": [{
      "default": { "source": "src/themes/tokens.css", "background": "#FFFFFF" }
    }],
    "primaryColor": "#0066cc"
  },


  "features": {
    "search": true,
    "darkMode": true,
    "codeSnippets": true,
    "playground": false,
    "testCoverage": false
  }
}
